<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#6bb1e2"
                android:endColor="@color/colorPrimaryDark"
                android:angle="270" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="5dp"
                android:right="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#6bb1e2"
                android:endColor="@color/colorPrimaryDark"
                android:angle="270" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="5dp"
                android:right="5dp" />

        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <gradient
                android:startColor="#6bb1e2"
                android:endColor="@color/colorPrimaryDark"
                android:angle="270" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="5dp"
                android:right="5dp"/>

        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#6bb1e2"
                android:endColor="@color/colorPrimaryDark"
                android:angle="270" />
            <corners
                android:radius="10dp" />
            <stroke
                android:width="2dp"
                android:color="#6bb1e2" />
            <padding
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>


</selector>